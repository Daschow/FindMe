<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('base/head', {title: 'Chat'}); %>
  </head>

  <body>
    <%- include('base/navbar'); %>

    <nav id="sidebar">
      <ul class="list-group" id="onlineList"></ul>
    </nav>

    <form id="loginForm" class="col-4">
      <div class="input-group mb-3">
        <input
          type="text"
          class="form-control"
          autocomplete="off"
          placeholder="name..."
          id="nameInput"
        />
        <div class="input-group-append">
          <button class="btn btn-success" type="submit">Login</button>
        </div>
      </div>
    </form>

    <form id="messageForm" class="hidden">
      <div class="input-group">
        <input
          type="text"
          class="form-control"
          autocomplete="off"
          placeholder="chat..."
          id="messageInput"
        />
        <div class="input-group-append">
          <button class="btn btn-outline-primary" type="submit">Send</button>
        </div>
      </div>
    </form>

          <div id="messagesContainer">
            <!-- Chat Messages Here -->
    <%- include('base/scripts'); %>
    <script src="/js/app.js"></script>
  </body>
</html>
